    <script src="~/js/scripts.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
